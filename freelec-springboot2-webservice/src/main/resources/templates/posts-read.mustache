{{>layout/header}}
<br xmlns="http://www.w3.org/1999/html"/>
<div id="posts_list">
    <div class="col-md-12">
        <form class="card">
            <div class="card-header d-flex justify-content-between">
                <label for="id">글 번호 : {{post.id}}</label>
                <input type="hidden" id="id" value="{{post.id}}">
            </div>
            <div class="card-header d-flex justify-content-between">
                <label for="writer">작성자 : {{post.author}}</label>
            </div>

            <div class="card-body">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" value="{{post.title}}" readonly>
                </br>
                {{#post.filePath}}
                <div class="col-md-6">
                    <img src="{{post.filePath}}" alt="imageFile" class="img-fluid">
                </div>
                {{/post.filePath}}
                </br>
                <label for="content">내용</label>
                <textarea rows="5" class="form-control" id="content" readonly>{{post.content}}</textarea>
            </div>
        </form>
        </br>
        <div class="ui-button" align="right">
            <a href="/" role="button" class="btn btn-info bi bi-arrow-return-left"> 목록</a>
            {{#writer}}
                <a href="/posts/update/{{post.id}}" role="button" class="btn btn-primary bi bi-pencil-square"> 수정</a>
                <button type="button" onclick="" id="btn-delete" class="btn btn-danger bi bi-trash"> 삭제</button>
            {{/writer}}
        </div>
        </br>
        {{! Comments }}
        {{>comments/list}}
        {{>comments/form}}
    </div>
</div>
{{>layout/footer}}